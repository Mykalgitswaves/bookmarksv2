{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "simple": {
        "format": "[%(levelname)s|%(module)s|L%(lineno)d] %(asctime)s: %(message)s",
        "datefmt": "%Y-%m-%dT%H:%M:%S%z"
      },
      "json": {
        "()": "src.utils.logging.formatters.JSONFormatter",
        "fmt_keys": {
          "level": "levelname",
          "message": "message",
          "timestamp": "timestamp",
          "logger": "name",
          "module": "module",
          "function": "funcName",
          "line": "lineno",
          "thread_name": "threadName"
        }
      }
    },
    "filters": {
      "warning_only": {
          "()": "src.utils.logging.filters.WarningOnlyFilter"
        },
      "info_debug": {
          "()": "src.utils.logging.filters.InfoDebugFilter"
        }
    },
    "handlers": {
      "stderr": {
        "class": "logging.StreamHandler",
        "level": "WARNING",
        "formatter": "simple",
        "stream": "ext://sys.stderr"
      },
      "warning_logs": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "WARNING",
        "filters": ["warning_only"],
        "filename": "src/utils/logging/logs/warning.log.jsonl",
        "maxBytes": 10000,
        "backupCount": 3
      },
      "error_logs": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "ERROR",
        "filename": "src/utils/logging/logs/error.log.jsonl",
        "maxBytes": 10000,
        "backupCount": 3
      },
      "file_json": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "json",
        "filters": ["info_debug"],
        "filename": "src/utils/logging/logs/info.log.jsonl",
        "maxBytes": 10000,
        "backupCount": 3
      }
    },
    "loggers": {
      "root": {
        "level": "DEBUG",
        "handlers": [
          "stderr",
          "file_json"
        ]
      }
    }
  }